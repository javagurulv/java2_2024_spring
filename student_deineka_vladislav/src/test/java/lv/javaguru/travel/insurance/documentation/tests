1. person first name is empty

    Request
{
    "personFirstName" = null
    "personLastName" = "Johnson"
    "agreementDateFrom" = "10.10.2010"
    "agreementDateTo" = "11.10.2010"
}

    Response
{
    "errors": [
    {
     "field": "personFirstName"
     "message": "Field cannot be empty"
    }
    ]

    "personFirstName" = null
    "personLastName" = null
    "agreementDateFrom" = null
    "agreementDateTo" = null
    "agreementPrice" = null
}

2. person last name is empty

    Request
{
    "personFirstName" = "Bob"
    "personLastName" = null
    "agreementDateFrom" = "10.10.2010"
    "agreementDateTo" = "11.10.2010"
}

    Response
{
    "errors": [
    {
     "field": "personLastName"
     "message": "Field cannot be empty"
    }
    ]

    "personFirstName" = null
    "personLastName" = null
    "agreementDateFrom" = null
    "agreementDateTo" = null
    "agreementPrice" = null
}

3. agreement date from is empty

    Request
{
    "personFirstName" = "Bob"
    "personLastName" = "Johnson"
    "agreementDateFrom" = null
    "agreementDateTo" = "11.10.2010"
}

    Response
{
    "errors": [
    {
     "field": "agreementDateFrom"
     "message": "Field cannot be empty"
    }
    ]

    "personFirstName" = null
    "personLastName" = null
    "agreementDateFrom" = null
    "agreementDateTo" = null
    "agreementPrice" = null
}

4. agreement date to is empty

    Request
{
    "personFirstName" = "Bob"
    "personLastName" = "Johnson"
    "agreementDateFrom" = "10.10.2010"
    "agreementDateTo" = null
}

    Response
{
    "errors": [
    {
     "field": "agreementDateTo"
     "message": "Field cannot be empty"
    }
    ]

    "personFirstName" = null
    "personLastName" = null
    "agreementDateFrom" = null
    "agreementDateTo" = null
    "agreementPrice" = null
}

5. agreement date to is earlier than date from

    Request
{
    "personFirstName" = "Bob"
    "personLastName" = "Johnson"
    "agreementDateFrom" = "10.10.2010"
    "agreementDateTo" = "09.10.2010"
}

    Response
{
    "errors": [
    {
     "field": "agreementDateTo"
     "message": "Cannot be smaller than dateFrom"
    }
    ]

    "personFirstName" = null
    "personLastName" = null
    "agreementDateFrom" = null
    "agreementDateTo" = null
    "agreementPrice" = null
}

6. agreement date to is equal to date from

    Request
{
    "personFirstName" = "Bob"
    "personLastName" = "Johnson"
    "agreementDateFrom" = "10.10.2010"
    "agreementDateTo" = "10.10.2010"
}

    Response
{
    "errors": [
    {
     "field": "agreementDateTo"
     "message": "Cannot be smaller than dateFrom"
    }
    ]

    "personFirstName" = null
    "personLastName" = null
    "agreementDateFrom" = null
    "agreementDateTo" = null
    "agreementPrice" = null
}